<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- white icons in dark -->
    <SolidColorBrush x:Key="IconFillBrush" Color="White"/>
    <!-- overall window background (very dark charcoal) -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="Transparent"/>

    <!-- large panel background (slightly lighter) -->
    <SolidColorBrush x:Key="PanelBackgroundBrush"  Color="Transparent"/>

    <!-- tile & card background (dark slate) -->
    <SolidColorBrush x:Key="CardBackgroundBrush"   Color="#242428"/>

    <!-- primary text (near‑white) -->
    <SolidColorBrush x:Key="PrimaryTextBrush"       Color="#E3E3E3"/>

    <!-- secondary text (muted gray) -->
    <SolidColorBrush x:Key="SecondaryTextBrush"     Color="#8A8A8E"/>

    <!-- accent for progress arcs, status dots, etc. -->
    <SolidColorBrush x:Key="AccentBrush"            Color="#FF4D4D"/>

    <!-- subtle border/line color between list items -->
    <SolidColorBrush x:Key="BorderBrush"            Color="#3A3A3F"/>

    <!-- Up‑Next header line and text -->
    <SolidColorBrush x:Key="HeaderLineBrush"        Color="#3E3E42"/>
    <SolidColorBrush x:Key="HeaderTextBrush"        Color="#E3E3E3"/>

    <!-- currency tag backgrounds (example: CHF gold, USD red, etc.) -->
    <SolidColorBrush x:Key="TagUSD" Color="#D64545"/>
    <SolidColorBrush x:Key="TagEUR" Color="#C2A443"/>
    <SolidColorBrush x:Key="TagGBP" Color="#5C9BD1"/>
    <SolidColorBrush x:Key="TagJPY" Color="#8E8B8A"/>
    <!-- you can reference these in your CurrencyTagStyle triggers -->

    <!-- DarkTheme.xaml -->
    <SolidColorBrush x:Key="CurrencyTagDefaultBrush" Color="#444"/>
    <!-- or whatever dark‑mode default -->


</ResourceDictionary>