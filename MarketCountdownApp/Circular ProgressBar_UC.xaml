<UserControl
    x:Class="MarketCountdownApp.CircularProgressBar_UC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="60" Height="60">

    <Grid>
        <!-- background ring -->
        <Ellipse
            Stroke="LightGray"
            StrokeThickness="{Binding StrokeThickness, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

        <!-- progress arc with glow -->
        <Path
            x:Name="PART_Path"
            Stroke="{Binding Stroke, RelativeSource={RelativeSource AncestorType=UserControl}}"
            StrokeThickness="{Binding StrokeThickness, RelativeSource={RelativeSource AncestorType=UserControl}}"
            StrokeStartLineCap="Round"
            StrokeEndLineCap="Round">
            <Path.Effect>
                <DropShadowEffect
                    BlurRadius="12"
                    ShadowDepth="0"
                    Opacity="0.8"
                    Color="{Binding Stroke.(SolidColorBrush.Color), 
              RelativeSource={RelativeSource AncestorType=Path}}"/>
            </Path.Effect>
        </Path>
    </Grid>
</UserControl>