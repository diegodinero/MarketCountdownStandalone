<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Light‑mode brushes -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#B0B0B0"/>
    <SolidColorBrush x:Key="PanelBackgroundBrush"  Color="#B0B0B0"/>
    <SolidColorBrush x:Key="CardBackgroundBrush"   Color="White"/>
    <SolidColorBrush x:Key="PrimaryTextBrush"       Color="#222222"/>
    <SolidColorBrush x:Key="SecondaryTextBrush"     Color="Gray"/>
    <SolidColorBrush x:Key="AccentBrush"            Color="#3498DB"/>
    <SolidColorBrush x:Key="BorderBrush"            Color="#CCCCCC"/>

</ResourceDictionary>